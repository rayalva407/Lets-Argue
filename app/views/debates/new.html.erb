<h1>Create a Debate<h1>

<% @debate.errors.full_messages.each do |m| %>
  <li><%= m %></li>
<% end %>

<% if params[:user_id] %>
  <%= form_for @debate do |f| %>
    <%= f.label :title %> <br>
    <%= f.text_field :title %> <br><br>

    <%= f.label :category %> <br>
    <%= f.text_field :category  %> <br><br>

    <%= f.label :body %> <br>
    <%= f.text_area :body %> <br><br>
    

    <%= f.submit "Create Debate" %>

  <% end %>

<% end %>
